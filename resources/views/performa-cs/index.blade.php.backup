                                        :class="leaderboard.type === 'consistency' ? 'bg-emerald-600 text-white' : 'bg-gray-700 text-gray-400'"
                                        class="px-2 py-1 text-xs rounded transition">‚≠ê Consistency</button>
                            </div>
                        </div>
                        
                        <div class="p-4 space-y-2 max-h-[500px] overflow-y-auto">
                            <template x-for="(item, index) in leaderboard.data" :key="item.name">
                                <div class="flex items-center bg-gray-700/30 rounded-lg p-3 hover:bg-gray-700/50 cursor-pointer transition"
                                     @click="openCsDetail(item.name)">
                                    <div class="w-8 h-8 rounded-full flex items-center justify-center mr-3"
                                         :class="{
                                             'bg-amber-500 text-black': item.rank === 1,
                                             'bg-gray-400 text-black': item.rank === 2,
                                             'bg-amber-700 text-white': item.rank === 3,
                                             'bg-gray-600': item.rank > 3
                                         }">
                                        <span class="font-bold text-sm" x-text="item.rank"></span>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="font-medium truncate" x-text="item.name"></p>
                                        <p class="text-xs text-gray-400" x-text="item.team || '-'"></p>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-bold text-emerald-400" x-text="item.value_formatted"></p>
                                    </div>
                                </div>
                            </template>
                            <template x-if="!leaderboard.data?.length">
                                <p class="text-center text-gray-500 py-4">Tidak ada data</p>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- Section 4 & 5: CS List + Insights -->
                <div class="grid lg:grid-cols-3 gap-6">
                    
                    <!-- Section 4: CS List -->
                    <div class="lg:col-span-2 bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
                        <div class="p-4 border-b border-gray-700">
                            <div class="flex items-center justify-between">
                                <h3 class="font-semibold flex items-center">
                                    <i class="fas fa-users text-blue-400 mr-2"></i>Daftar CS
                                </h3>
                                <div class="flex items-center gap-2">
                                    <div class="relative">
                                        <input type="text" x-model="csList.search" @input.debounce.300ms="fetchCsList()"
                                               placeholder="Cari CS..."
                                               class="bg-gray-700 border border-gray-600 rounded-lg pl-8 pr-3 py-1.5 text-sm w-40 focus:ring-2 focus:ring-emerald-500">
                                        <i class="fas fa-search absolute left-2.5 top-1/2 -translate-y-1/2 text-gray-400 text-xs"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="grid sm:grid-cols-2 gap-3 p-4 max-h-[400px] overflow-y-auto">
                            <template x-for="cs in csList.data" :key="cs.id">
                                <div class="bg-gray-700/30 rounded-lg p-3 hover:bg-gray-700/50 cursor-pointer transition"
                                     @click="openCsDetail(cs.name, cs.id)">
                                    <div class="flex items-center mb-2">
                                        <div class="w-10 h-10 rounded-full bg-emerald-600 flex items-center justify-center mr-3">
                                            <span class="font-bold" x-text="cs.name.charAt(0).toUpperCase()"></span>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="font-medium truncate" x-text="cs.name"></p>
                                            <p class="text-xs text-gray-400" x-text="cs.team || '-'"></p>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-3 gap-2 text-center text-xs">
                                        <div>
                                            <p class="text-emerald-400 font-bold" x-text="cs.total_perolehan_formatted"></p>
                                            <p class="text-gray-500">Perolehan</p>
                                        </div>
                                        <div>
                                            <p class="text-blue-400 font-bold" x-text="cs.total_donatur"></p>
                                            <p class="text-gray-500">Donatur</p>
                                        </div>
                                        <div>
                                            <p class="text-purple-400 font-bold" x-text="cs.total_laporan"></p>
                                            <p class="text-gray-500">Laporan</p>
                                        </div>
                                    </div>
                                </div>
                            </template>
                            <template x-if="!csList.data?.length">
                                <div class="col-span-2 text-center text-gray-500 py-8">
                                    <i class="fas fa-users text-4xl mb-2"></i>
                                    <p>Tidak ada data CS</p>
                                </div>
                            </template>
                        </div>
                    </div>
                    
                    <!-- Section 5: Insights & Alerts -->
                    <div class="bg-gray-800 rounded-xl border border-gray-700 overflow-hidden">
                        <div class="p-4 border-b border-gray-700">
                            <h3 class="font-semibold flex items-center">
                                <i class="fas fa-lightbulb text-yellow-400 mr-2"></i>Insights & Alerts
                            </h3>
                        </div>
                        
                        <div class="p-4 space-y-4 max-h-[400px] overflow-y-auto">
                            <!-- Alerts -->
                            <template x-for="alert in insights.alerts" :key="alert.type">
                                <div class="rounded-lg p-3"
                                     :class="{
                                         'bg-red-900/30 border border-red-700/50': alert.severity === 'danger',
                                         'bg-yellow-900/30 border border-yellow-700/50': alert.severity === 'warning',
                                         'bg-emerald-900/30 border border-emerald-700/50': alert.severity === 'success'
                                     }">
                                    <p class="font-medium text-sm mb-2"
                                       :class="{
                                           'text-red-400': alert.severity === 'danger',
                                           'text-yellow-400': alert.severity === 'warning',
                                           'text-emerald-400': alert.severity === 'success'
                                       }"
                                       x-text="alert.title"></p>
                                    <div class="space-y-1">
                                        <template x-for="item in alert.data" :key="item.name">
                                            <div class="text-xs flex items-center justify-between text-gray-300 hover:bg-white/5 rounded px-1 cursor-pointer"
                                                 @click="openCsDetail(item.name)">
                                                <span x-text="item.name"></span>
                                                <span x-text="item.change ? item.change + '%' : item.last_report"></span>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </template>
                            
                            <!-- Best Practices -->
                            <div x-show="insights.insights?.length" class="bg-gray-700/30 rounded-lg p-3">
                                <p class="font-medium text-sm text-blue-400 mb-2">üí° Best Practices</p>
                                <div class="space-y-2">
                                    <template x-for="insight in insights.insights" :key="insight.type">
                                        <p class="text-xs text-gray-300">
                                            <span x-text="insight.icon" class="mr-1"></span>
                                            <span x-text="insight.text"></span>
                                        </p>
                                    </template>
                                </div>
                            </div>
                            
                            <template x-if="!insights.alerts?.length && !insights.insights?.length">
                                <div class="text-center text-gray-500 py-4">
                                    <i class="fas fa-check-circle text-2xl mb-2"></i>
                                    <p class="text-sm">Tidak ada alert saat ini</p>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Mobile Sidebar -->
        <div x-show="showMobileMenu" x-cloak 
             class="fixed inset-0 bg-black/50 z-50 lg:hidden"
             @click="showMobileMenu = false">
            <aside class="w-64 bg-gray-800 h-full overflow-y-auto" @click.stop>
                <div class="p-4 border-b border-gray-700 flex items-center justify-between">
                    <h1 class="text-xl font-bold text-emerald-400">CRM Dashboard</h1>
                    <button @click="showMobileMenu = false" class="text-gray-400">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <nav class="p-4">
                    <ul class="space-y-2">
                        <li><a href="{{ route('analisis-donatur') }}" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700"><i class="fas fa-chart-pie w-5 mr-3"></i>Analisis Donatur</a></li>
                        <li><a href="{{ route('donatur.index') }}" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700"><i class="fas fa-users w-5 mr-3"></i>Data Donatur</a></li>
                        <li><a href="{{ route('laporan-perolehan.index') }}" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700"><i class="fas fa-file-invoice-dollar w-5 mr-3"></i>Laporan Perolehan</a></li>
                        <li class="pt-4 mt-4 border-t border-gray-700"><span class="px-4 text-xs font-semibold text-gray-500 uppercase">Monitoring</span></li>
                        <li><a href="{{ route('monitor-cs.index') }}" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700"><i class="fas fa-desktop w-5 mr-3"></i>Monitor CS</a></li>
                        <li><a href="{{ route('performa-cs.index') }}" class="flex items-center px-4 py-2 rounded-lg bg-emerald-600/20 text-emerald-400"><i class="fas fa-trophy w-5 mr-3"></i>Performa CS</a></li>
                    </ul>
                </nav>
            </aside>
        </div>
    </div>

    <script>
        function performaCsApp() {
            return {
                loading: false,
                showMobileMenu: false,
                showCsDetailModal: false,
                lastUpdate: '-',
                
                filters: {
                    periode: 'bulan_ini',
                    tim: 'all',
                },
                
                overview: {},
                
                h2h: {
                    mode: 'bulanan',
                    periode1: '',
                    periode2: '',
                    viewBy: 'cs',
                    comparison: [],
                    summary: {},
                    labels: {},
                },
                
                leaderboard: {
                    type: 'top_earners',
                    data: [],
                },
                
                csList: {
                    search: '',
                    data: [],
                },
                
                insights: {
                    alerts: [],
                    insights: [],
                },
                
                csDetail: null,
                h2hChart: null,
                csTrendChart: null,
                
                init() {
                    // Set default periode untuk H2H
                    const now = new Date();
                    const lastYear = new Date(now);
                    lastYear.setFullYear(lastYear.getFullYear() - 1);
                    
                    this.h2h.periode1 = now.toISOString().slice(0, 7); // 2025-12
                    this.h2h.periode2 = lastYear.toISOString().slice(0, 7); // 2024-12
                    
                    this.refreshAll();
                },
                
                async refreshAll() {
                    this.loading = true;
                    try {
                        await Promise.all([
                            this.fetchOverview(),
                            this.fetchH2hData(),
                            this.fetchLeaderboard(),
                            this.fetchCsList(),
                            this.fetchInsights(),
                        ]);
                        this.lastUpdate = new Date().toLocaleTimeString('id-ID');
                    } catch (e) {
                        console.error(e);
                    }
                    this.loading = false;
                },
                
                async fetchOverview() {
                    try {
                        const params = new URLSearchParams({
                            periode: this.filters.periode,
                            tim: this.filters.tim,
                        });
                        const res = await fetch(`/api/performa-cs/overview-summary?${params}`);
                        const json = await res.json();
                        if (json.success) this.overview = json.data;
                    } catch (e) { console.error(e); }
                },
                
                async fetchH2hData() {
                    try {
                        const params = new URLSearchParams({
                            mode: this.h2h.mode,
                            periode1: this.h2h.periode1,
                            periode2: this.h2h.periode2,
                            tim: this.filters.tim,
                            view_by: this.h2h.viewBy,
                        });
                        const res = await fetch(`/api/performa-cs/h2h-comparison?${params}`);
                        const json = await res.json();
                        if (json.success) {
                            this.h2h.comparison = json.data.comparison;
                            this.h2h.summary = json.data.summary;
                            this.h2h.labels = json.data.labels;
                            this.renderH2hChart();
                        }
                    } catch (e) { console.error(e); }
                },
                
                async fetchLeaderboard() {
                    try {
                        const params = new URLSearchParams({
                            type: this.leaderboard.type,
                            periode: this.filters.periode,
                            tim: this.filters.tim,
                            limit: 10,
                        });
                        const res = await fetch(`/api/performa-cs/leaderboard?${params}`);
                        const json = await res.json();
                        if (json.success) this.leaderboard.data = json.data;
                    } catch (e) { console.error(e); }
                },
                
                async fetchCsList() {
                    try {
                        const params = new URLSearchParams({
                            tim: this.filters.tim,
                            search: this.csList.search,
                            periode: this.filters.periode,
                        });
                        const res = await fetch(`/api/performa-cs/cs-list?${params}`);
                        const json = await res.json();
                        if (json.success) this.csList.data = json.data;
                    } catch (e) { console.error(e); }
                },
                
                async fetchInsights() {
                    try {
                        const params = new URLSearchParams({ tim: this.filters.tim });
                        const res = await fetch(`/api/performa-cs/insights-alerts?${params}`);
                        const json = await res.json();
                        if (json.success) {
                            this.insights.alerts = json.data.alerts;
                            this.insights.insights = json.data.insights;
                        }
                    } catch (e) { console.error(e); }
                },
                
                async openCsDetail(csName, csId = null) {
                    try {
                        const params = new URLSearchParams({
                            cs_name: csName,
                            periode: this.filters.periode,
                        });
                        if (csId) params.set('cs_id', csId);
                        
                        const res = await fetch(`/api/performa-cs/cs-detail?${params}`);
                        const json = await res.json();
                        if (json.success) {
                            this.csDetail = json.data;
                            this.showCsDetailModal = true;
                            this.$nextTick(() => this.renderCsTrendChart());
                        }
                    } catch (e) { console.error(e); }
                },
                
                renderH2hChart() {
                    const ctx = document.getElementById('h2hChart');
                    if (!ctx) return;
                    
                    if (this.h2hChart) this.h2hChart.destroy();
                    
                    const labels = this.h2h.comparison.slice(0, 10).map(i => i.name);
                    const data1 = this.h2h.comparison.slice(0, 10).map(i => i.periode1_value);
                    const data2 = this.h2h.comparison.slice(0, 10).map(i => i.periode2_value);
                    
                    this.h2hChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [
                                {
                                    label: this.h2h.labels?.periode1 || 'Periode 1',
                                    data: data1,
                                    backgroundColor: 'rgba(16, 185, 129, 0.8)',
                                },
                                {
                                    label: this.h2h.labels?.periode2 || 'Periode 2',
                                    data: data2,
                                    backgroundColor: 'rgba(107, 114, 128, 0.6)',
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { labels: { color: '#9ca3af' } }
                            },
                            scales: {
                                x: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } },
                                y: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } }
                            }
                        }
                    });
                },
                
                renderCsTrendChart() {
                    const ctx = document.getElementById('csTrendChart');
                    if (!ctx || !this.csDetail?.trend) return;
                    
                    if (this.csTrendChart) this.csTrendChart.destroy();
                    
                    const labels = this.csDetail.trend.map(i => i.week_start?.slice(5, 10) || i.week);
                    const data = this.csDetail.trend.map(i => i.total);
                    
                    this.csTrendChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Perolehan',
                                data: data,
                                borderColor: 'rgb(16, 185, 129)',
                                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                                fill: true,
                                tension: 0.3,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { display: false } },
                            scales: {
                                x: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } },
                                y: { ticks: { color: '#9ca3af' }, grid: { color: '#374151' } }
                            }
                        }
                    });
                },
                
                exportH2h() {
                    const params = new URLSearchParams({
                        mode: this.h2h.mode,
                        periode1: this.h2h.periode1,
                        periode2: this.h2h.periode2,
                        tim: this.filters.tim,
                        view_by: this.h2h.viewBy,
                    });
                    window.open(`/api/performa-cs/export?${params}`, '_blank');
                },
                
                formatRupiah(amount) {
                    if (!amount) return 'Rp 0';
                    if (amount >= 1000000) return 'Rp ' + (amount / 1000000).toFixed(1) + ' jt';
                    if (amount >= 1000) return 'Rp ' + (amount / 1000).toFixed(0) + ' rb';
                    return 'Rp ' + amount.toLocaleString('id-ID');
                },
                
                formatDate(date) {
                    if (!date) return '-';
                    return new Date(date).toLocaleDateString('id-ID', { day: 'numeric', month: 'short' });
                },
            };
        }
    </script>
</body>
</html>
